# Example environment variables for local development
# Copy this file to `.env` and fill real values

# Database URL (Postgres)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/newsdb?schema=public"

# NextAuth secret (use a long random string)
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Optional: Google/GitHub OAuth credentials used by NextAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Optional: Node environment
NODE_ENV=development
